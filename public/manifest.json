{
  "manifest_version": 3,
  "name": "WorkTool 插件",
  "version": "1.2",
  "description": "WorkTool 浏览器插件,作为桌面版扩展",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "declarativeNetRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
